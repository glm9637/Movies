<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/cast_picture"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <android.support.constraint.Guideline
        android:id="@+id/txt_guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/txt_role_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/cast_picture"
        app:layout_constraintBottom_toBottomOf="@id/txt_guideline"
        android:text="@string/character_label" />

    <TextView
        android:id="@+id/txt_actor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/cast_picture"
        app:layout_constraintTop_toBottomOf="@id/txt_guideline"
        android:text="@string/actor_label" />

    <TextView
        android:id="@+id/txt_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/txt_role_label"
        app:layout_constraintLeft_toRightOf="@id/txt_role_label"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/txt_actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/txt_actor_label"
        app:layout_constraintLeft_toRightOf="@id/txt_actor_label"
        android:layout_marginLeft="8dp"/>


</android.support.constraint.ConstraintLayout>